{% extends 'base.html.twig' %}

{% block title %}Tva index{% endblock %}

{% block body %}
    <h1>Tva index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Taux</th>
                <th>Note</th>
                <th>Active</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tva in tvas %}
            <tr>
                <td>{{ tva.id }}</td>
                <td>{{ tva.code }}</td>
                <td>{{ tva.taux }}</td>
                <td>{{ tva.note }}</td>
                <td>{{ tva.active ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('tva_edit', {'id': tva.id}) }}">edit</a>
                    <a href="{{ path('tva_delete', {'id': tva.id}) }}">delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('tva_new') }}">Create new</a>
{% endblock %}
